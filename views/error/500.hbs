        80%{transform: rotate(120deg);}
        90%{transform: rotate(150deg);}
        100%{transform: rotate(170deg);}
      }*/
      
      @keyframes brokenHinge {
        0%{transform: rotate(0deg);}
        25%{transform: rotate(30deg);}
        50%{transform: rotate(60deg);}
        70%{transform: rotate(90deg);}
        80%{transform: rotate(120deg);}
        90%{transform: rotate(150deg);}
        100%{transform: rotate(170deg);}

      }
    </style>
